<h2>List of users </h2>

 <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "logout", html: { onClick: "history.go(0)" } %>  

<ul id="user-container">
<% @users.each do |user|%>
    <a href=<%="/users/#{user.id}" %> id=<%="user#{user.id}"%>>
        <li>
            <div class="profile">
                <img class="img-profile" src=<%= user.photo  %> id=<%="img#{user.id}" %> alt='User Profile'/>
            </div>

            <div class="single-user bordered">
                <p class="user-name">
                user Name: <%=user.name %>
                </p>
                <div>
                <p class="counter">
                Number of posts: <%=user.posts.count %>
                </p>
                </div>
            </div>
        </li>
    </a>
<% end %>
</ul>